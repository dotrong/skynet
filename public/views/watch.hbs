    <!--//*****BOOTSTRAP*****// -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <!-- **********Font Awesome CSS Icons (glyphicons)********** -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
      
    <!-- *****PREVENT FAVICON REQUESTS***** -->    
    <link rel="shortcut icon" href="data:image/x-icon;," type="image/x-icon">

    <!-- *****LOCAL STYLES AND JS LINKS***** -->
<!-- <link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css"> -->
    <link rel="stylesheet" href="assets/style.css">

</head>

<body>

  <!-- *****CONTAINER FOR NAV BAR***** -->  
<header role="banner"> 
  <!-- *****NAVIGATON BAR***** -->
  <nav id="fixedNav" class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <span class="leftIcon">
        <a href="/addwatch">
          <i class="glyphicon glyphicon-menu-hamburger"></i>
        </a>
      </span>    
            <h1 class="text-center">Locations</h1>

      <span class="rightIcon">
        <a href="/">
          <i class="glyphicon glyphicon-user"></i></a>Welcome {{username}}
        
      </span> 
    </div>
  </nav>
</header>


<div class="watchForm">
  <div class="panel panel-default">
    
      <form>
        <h2>Select the cities and alerts you want to watch</h2>
        <br>
        <div class="form-group">
              <input type="text" class="form-control" name="state" placeholder="State or Country" required>
        </div>

        <div class="form-group">
              <input type="text" class="form-control" name="city" placeholder="City" required>
        </div>  
        <br>
        <br>
        <div class="form-check">
          <label class="form-check-label">
              <input type="checkbox" class="form-check-input" name="weather" checked >
            Weather Alerts
          </label>
        </div>

        <div class="form-check">
          <label class="form-check-label">
              <input type="checkbox" class="form-check-input" name="travel" checked >
            Travel Alerts
          </label>
        </div>

        <div class="form-check">
          <label class="form-check-label">
              <input type="checkbox" class="form-check-input" name="earthquake" checked >
            Earthquake Alerts
          </label>
        </div> 

        <div class="userBtns">
          <button type="submit" class="btn btn-default" id="userSubmit">Submit</button>
          <button type="reset" class="btn btn-default" id="userReset">Reset</button>
        </div>          
      </form>

      <div id="demo"> <!-- DYNAMIC RESULTS --> </div>      

  </div>    
</div>
<script src="js/app.js"></script>
</body>
</html>	

